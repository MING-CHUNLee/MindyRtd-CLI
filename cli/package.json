{
    "name": "mindy-rstudio-cli",
    "version": "1.0.0",
    "description": "CLI tool for detecting and analyzing R files in RStudio projects",
    "main": "dist/index.js",
    "bin": {
        "mindy-cli": "dist/index.js",
        "mrc": "dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
