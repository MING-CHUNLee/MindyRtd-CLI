    "license": "MIT",
    "dependencies": {
        "chalk": "^4.1.2",
        "commander": "^11.1.0",
        "glob": "^10.3.10",
        "ora": "^5.4.1"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vitest": "^1.1.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}